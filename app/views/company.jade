etto-logged-in-nav

etto-update-company.etto-company.etto-bgcolor-light
  .container
    .row
      .col-sm-4.etto-color-light
        h4.etto-color-primary Primary Color
        .etto-bgcolor-primary.etto-color-input-box
          h3.etto-color-light(editable-text="tier.colors.primary", buttons="no", blur="submit", onaftersave="updateTier()") {{ tier.colors.primary || 'Primary Color'}}
        
        h4.etto-color-secondary Secondary Color
        .etto-bgcolor-secondary.etto-color-input-box
          h3.etto-color-light(editable-text="tier.colors.secondary", buttons="no", blur="submit", onaftersave="updateTier()") {{ tier.colors.secondary || 'Secondary Color'}}

        h4.etto-color-accent Accent
        .etto-bgcolor-accent.etto-color-input-box
          h3.etto-color-light(editable-text="tier.colors.accent", buttons="no", blur="submit", onaftersave="updateTier()") {{ tier.colors.accent || 'Accent Color'}}
        
        br
        .etto-bgcolor-primary.etto-color-input-box.etto-light-example
          h4.etto-color-light Light
          h3.etto-bgcolor-light.etto-color-primary.etto-color-input-box(editable-text="tier.colors.light", buttons="no", blur="submit", onaftersave="updateTier()") {{ tier.colors.light || 'Accent Color'}}
      .col-sm-8.etto-bgcolor-white.etto-company-info

        h4 Company Name
        .etto-bgcolor-light.etto-color-input-box
          h3.etto-color-secondary(editable-text="tier.title", buttons="no", blur="submit", onaftersave="updateTier()") {{ tier.title || 'Company Name'}}
        hr
        h3.etto-color-primary Custom Login Link
        p.etto-color-secondary https://coursetto.com/login/{{company._id}}
        hr
        .row
          .col-md-5
            h3.etto-color-primary Logo
            img.img-uploadable(src="{{tier.logo}}", etto-asset-library-modal, ng-click='updateLogo()', height="65")
          .col-md-7
            h3.etto-color-primary Font
            select(ng-change="updateTier()", ng-model="tier.font", ng-options="font for font in fonts")
            .checkbox
              label Don't show company name in the navigation bar (our logo is our company name)
                input(type="checkbox", ng-model="tier.logoIsCompanyName", ng-change="updateTier()") 

           
        hr
        h3.etto-color-primary Main Image
        img.img-responsive.default-lg.img-uploadable(src="{{tier.leaderboard.imgUrl}}", etto-asset-library-modal, ng-click='updateMainImg()')
