.etto-company.etto-bgcolor-light
  .container
    .row
      .col-sm-6.etto-color-light
        h4.etto-color-primary Color input format accepts 
        p.etto-color-primary #xxxxxx, rba(xxx, xxx, xxx), or rgba(xxx, xxx, xxx, 0.3)
        h4.etto-color-primary Primary Color
        .etto-bgcolor-primary.etto-color-input-box
          h1.etto-color-light(editable-text="company.colors.primary", buttons="no", blur="submit", onaftersave="changeWhiteLabel()") {{ company.colors.primary || 'Primary Color'}}
        
        h4.etto-color-secondary Secondary Color
        .etto-bgcolor-secondary.etto-color-input-box
          h1.etto-color-light(editable-text="company.colors.secondary", buttons="no", blur="submit", onaftersave="changeWhiteLabel()") {{ company.colors.secondary || 'Secondary Color'}}

        h4.etto-color-accent Accent
        .etto-bgcolor-accent.etto-color-input-box
          h1.etto-color-light(editable-text="company.colors.accent", buttons="no", blur="submit", onaftersave="changeWhiteLabel()") {{ company.colors.accent || 'Accent Color'}}
        
        br
        .etto-bgcolor-primary.etto-color-input-box.etto-light-example
          h4.etto-color-light Light
          h1.etto-bgcolor-light.etto-color-primary.etto-color-input-box(editable-text="company.colors.light", buttons="no", blur="submit", onaftersave="changeWhiteLabel()") {{ company.colors.light || 'Accent Color'}}
      .col-sm-6.etto-bgcolor-white.etto-company-info
        h3.etto-color-primary Custom Login Link
        p.etto-color-secondary https://coursetto.com/login/{{company._id}}
        h3.etto-color-primary Logo
        img.img-uploadable(ng-if="user.auth.canPurchase", src="{{company.logo}}", etto-asset-library-modal, ng-click='updateLogo()', height="65")
        
        h3.etto-color-primary Font
        select(ng-change="changeWhiteLabel()", ng-model="company.font", ng-options="font for font in fonts")
        h3.etto-color-primary Main Image
        img.img-responsive.default-lg.img-uploadable(src="{{company.leaderboard.imgUrl}}", etto-asset-library-modal, ng-click='updateMainImg()')
