etto-not-logged-in-nav(etto-login-modal)
.container(etto-reset-password)
  .col-md-7
    h2 Reset Password for {{user.name}}
    p It happens to the best of us.
    div(ng-show="err")
      .alert.alert-danger {{err.message}}
    form(ng-submit="updatePassword()", ng-if="user")
      .form-group
        input.form-control( type="password", ng-model="user.password", placeholder="Reset Password", required )
      .form-group
        input.btn.btn-success( type="submit", value="Reset" )
        a.btn.btn-default( href="/" ) Cancel
  .col-md-5
    img(src="/images/site/logo-large.png")
