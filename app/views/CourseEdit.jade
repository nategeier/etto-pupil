
.container-full.etto-course-editor(etto-choose-block, etto-session)
  .row
    .col-sm-3.col-md-2
      .panel.panel-default(ng-if="isEditing")
        .panel-heading
          h4.etto-color-accent(editable-text="course.title", buttons="no", blur="submit", onaftersave="saveCourse()") {{course.title || 'Title'}} 
          p.etto-color-accent(editable-text="course.subtitle", buttons="no", blur="submit", onaftersave="saveCourse()") {{course.subtitle || 'Description'}}
      
        .list-group
          .list-group-item
            .btn-group
              button.btn.btn-success.etto-bgcolor-primary(ng-click="showOptions()")
                i.fa.fa-plus
              button.btn.btn-default(ng-click='swapBlocks(currentBlock(), currentBlock() + 1)')
                i.fa.fa-refresh
              button.btn.btn-danger.etto-bgcolor-accent(ng-click='removeBlock()')
                i.fa.fa-minus.etto-color-light

          .list-group-item
            p Current State: {{course.status}}

          .list-group-item
            img.img-responsive.default-lg.img-uploadable(src="{{course.thumb}}", etto-asset-library-modal, etto-image, ng-click='updateThumb()')
          .list-group-item
            div(href="#", editable-textarea="course.meta.keywords", e-rows="5", e-cols="40", buttons="no", blur="submit", onaftersave="saveCourse()") 
              pre {{ course.meta.keywords || 'keywords'}}
          .list-group-item
            .btn-group
              a.btn.btn-success(href="#", etto-course-status, ng-click="changeStatus()") Launch
              a.btn.btn-default(href="/etto") Exit
          
    .etto-course-container(ng-class="isEditing ? 'col-sm-9 col-md-10' : 'col-sm-12'")
      .row
      .col-md-12
          etto-course( edit='edit',
                     course='course')
      .col-md-12
        .etto-course-exit
          a.etto-course-exit(href="/etto", target="_self")
            i.fa.fa-2x.fa-times-circle
    
      .col-md-12
        etto-course-nav(ng-if="blocksInCourse() >= 1")
        div(ng-if="blocksInCourse() === 0")
          h1.etto-color-primary Welcome {{company.title}} course builder
          hr
          p.etto-color-primary To create a slide, press the plus button to the left and choose a template. We suggest a title for the first slide.
          p.etto-color-primary Keep adding slides as you would any presentation.
