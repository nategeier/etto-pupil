etto-logged-in-nav

.container-full
  .row
    .col-md-9.nopad
      .leaderboard
        .row
          .col-md-4
            img.img-responsive.pull-left.default-lg(src="/images/leaderboard/market/default-lg.jpg")
          .col-md-5
            h2 Course Market
            p Purchase or upload a new course
            input.form-control.over-img(type='text', ng-model='searchCourse', placeholder='Search Course', style="margin-top:40px;")
          .col-md-3
            img.img-responsive.hidden-sm.pull-right(src="/images/leaderboard/market/default-sm-tp.jpg")
            img.img-responsive.hidden-sm.pull-right(src="/images/leaderboard/market/default-sm-bm.jpg")



      .alert.alert-danger(ng-show="err")
        p {{err}}
      div(ng-repeat='course in courses | filter:searchCourse')
        .col-md-3.col-sm-3
          .course-holder(sink-in)
            .row
              .col-xs-12
                img.img-responsive(src='/images/courses/thumbs/course_2.jpg')
            .row
              .col-md-7
                h5 {{course.title}}
                h6 {{course.subtitle}}

              .col-md-5
                h4 ${{course.priceWithEmps}}
                small ${{course.price}}/user
              .col-md-12
                .btn-group
                  a.btn.btn-primary.btn-xs(etto-purchase, href="#", ng-click='purchase(course, null)') Purchase
                  a.btn.btn-default.btn-xs(href="/course/view/{{ course._id }}")  Demo

    .col-md-3.nopad
      .side-panel
        .modal-header
          h4.modal-title {{currentTier.title}}
          p Course for {{totUsers}} users

        div.tree(ng-cloak='ng-cloak')
          .live
            ol
              li(etto-tree='child in data.children at ol', ng-class='{minimized:child.minimized}')
                div(ng-class='{isoff: child.isoff, ison: !child.isoff}')
                  .toggle(ng-click='toggleMinimized(child)', ng-switch='child.minimized', on='child.minimized')
                    i.fa.fa-sort-asc.fa-2x.pull-left(ng-show= 'child._children', ng-switch-when= 'false')
                    i.fa.fa-caret-right.fa-2x.pull-left(ng-show= 'child._children', ng-switch-default='ng-switch-default')
                  .tree-btn(ng-click='toggleIsOn(child)')
                    div.pull-left(ng-show= '!child._children[0]', style='width:20px; height:30px;')
                    p.pull-left {{child.title}}

                    .pull-right(style="width:40px")

                      i.fa.fa-user.pull.pull-left(style="padding-top:5px")
                      p {{child.dynamicTotalUsers}}
                    .clearfix
                ol(ng-class='{pregnant:child.children.length}')
                .clearfix





