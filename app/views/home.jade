etto-logged-in-nav

etto-verify-modal(redirect-to='/etto')
.container-full
  .row
    .left-holder.col-sm-12.nopad(ng-class="user.auth.canCreateCourses ? 'col-md-9' : 'col-md-12'")
      .leaderboard
        .row
          .col-xs-12.col-sm-6.col-md-7
            .col-md-12
              h3#title(editable-text="company.leaderboard.title", buttons="no", blur="submit", onaftersave="updateLeaderboard()") {{company.leaderboard.title}}
              h4#subtite(editable-text="company.leaderboard.subtitle", buttons="no", blur="submit", onaftersave="updateLeaderboard()") {{company.leaderboard.subtitle}}
          .col-sm-6.col-md-5#head-img
            img.img-responsive.pull-left.default-lg(src="{{company.leaderboard.imgUrl}}")
            button.btn.btn-default.leaderboard-img-btn(etto-asset-library-modal, ng-click='updateMainImg()')
              i.fa.fa-camera

      .main-holder(ng-show="usersCourses[0]")
        .alert.alert-danger(ng-show="err")
          p {{err}}
        div(class="animate-repeat", ng-repeat='course in usersCourses')
          .nopad(ng-class="user.auth.canCreateCourses ? 'col-sm-6 col-md-4 col-lg-3' : 'col-sm-6 col-md-3 col-lg-2'")
            .course-holder(sink-in, ng-click="openCourse(course)")
              img.img-responsive.user-course-thumb(src="/images/courses/thumbs/course_2.jpg")
              .row 
                .col-xs-9
                  h4 {{course.title}}
                  p {{course.subtitle}}
                div(ng-show="course._record")
                  img.img-responsive.col-md-3(src="/images/courses/badges/default.png", ng-show="course._record.progress.bookmark === course._record.progress.totalBlocks && course._record.progress.totalBlocks !== 1")

              .progress(ng-show="!course._record")
                .progress-bar(role="progressbar", aria-valuenow="1", aria-valuemin="0", aria-valuemax="100", style="width: 1%;")
              .progress(ng-show="course._record")
                .progress-bar(ng-show="course._record.progress.totalBlocks > 1", role="progressbar", aria-valuenow="{{(course._record.progress.bookmark/course._record.progress.totalBlocks) * 100}}", aria-valuemin="0", aria-valuemax="100", style="width: {{(course._record.progress.bookmark/course._record.progress.totalBlocks) * 100}}%;")
        .clearfix
      .col-md-9.col-sm-9.col-md-9(ng-show="!usersCourses[0]", etto-on-boarding)
    .col-sm-12.col-md-3.nopad(ng-show="user.auth.canCreateCourses")
      .side-panel
        .modal-header
          
          .col-xs-2.col-sm-2.col-md-2
            etto-add-course
          .col-xs-10.col-sm-10.col-md-10
            h4.modal-title Composed Courses
          .clearfix
        .modal-body
          .course-deck
            div(ng-repeat='course in createdCourses')
              .course(sink-in)
                button.close.aria-hidden.pull-right(etto-remove-course, type="button", ng-click='removeCourse(course._id, course.title)')
                  i.fa.fa-trash-o
                a(href="/course/edit/{{ course._id }}")
                  .row
                    .col-xs-5.col-sm-5.col-md-5
                      img.img-responsive.user-course-thumb(src="/images/courses/thumbs/course_2.jpg")

                    .col-xs-7.col-sm-7.col-md-7
                      h5 {{course.title}}
                      


          .clearfix


