.row.quiz-block
  .col-md-10.col-md-offset-1
    div(ng-show="!isEditing")
      div(ng-repeat = "q in block.data.questions track by $index")
        .question.col-md-10.col-md-offset-1(id="question{{$index}}")
          h4 {{$index + 1}}. {{q.question}}
          div(ng-repeat = "a in q.answers track by $index")
            .btn.btn-default.w100(ng-click="checkAnswer(a.correct, $parent.$index)")
              .radio
                label {{alphabet[$index]}} ) {{a.answer}}
                  input(type="radio", name="q{{$parent.$index}}")
      .col-md-6.col-md-offset-3
        button.btn.btn-success.w100(ng-click="evaluate()") Evaluate
