.row.quiz-block(etto-block-quiz)
  .col-md-10.col-md-offset-1
    div(ng-init="setUpEvalArr(block.data.questions)")
    div(ng-init="scoreToPass(block.data.passable)")
    div(ng-repeat = "q in block.data.questions track by $index")
      .panel.panel-default(id="question{{$index}}")
        .panel-heading
          h3.panel-title {{$index + 1}}. {{q.question}}
        
        .list-group
          a.list-group-item.list-group-item-success(href="#", ng-if="q.incorrect") Incorrect, please try again.
          a.list-group-item(href="#", ng-repeat = "a in q.answers track by $index", ng-class="!a.selected ? 'not-active' : 'active'")
            div(ng-click="checkAnswer(q.answers, a, $parent.$index)")  {{alphabet[$index]}} ) {{a.answer}}
          
    div(ng-show="err")
      .alert.alert-danger {{err.message}}
    button.btn.btn-success(ng-click="evaluate(block.data.questions)") Evaluate



