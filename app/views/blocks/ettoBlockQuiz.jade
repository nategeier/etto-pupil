.row.quiz-block
  .col-md-10.col-md-offset-1
    etto-block-quiz
      h1(editable-text="block.data.title", buttons="no", blur="submit", onaftersave="saveCourse()") {{ block.data.title || course.title + " Quiz"}} 
      div(ng-show="isEditing")
        div(ng-repeat = "q in block.data.questions track by $index")
          .question.col-md-10.col-md-offset-1
            button.btn.btn-danger.btn-sm.pull-right(ng-click="deleteQuestion(block.data.questions, $index)") X
            h4(editable-text="q.question", buttons="no", blur="submit", onaftersave="saveCourse()", ng-show="isEditing") {{$index + 1}}. {{ q.question || "author"}}
            .clearfix
            
            table.table.table-no-border
              tr(ng-repeat = "a in q.answers track by $index")
                td(editable-text="a.answer", buttons="no", blur="submit", onaftersave="saveCourse()")  {{alphabet[$index]}} ) {{ a.answer || "author"}}
                td
                  .checkbox
                    lable Correct
                      input(type="checkbox", ng-model = "a.correct") 
                td
                  button.btn.btn-danger.btn-sm(ng-click="deleteAnswer(q.answers, $index)") X
            button.btn.btn-default.btn-sm(ng-click="addAnswer(block.data.questions, $index)") Add answer
        .col-md-10.col-md-offset-1
          button.btn.btn-success.btn-sm(ng-click="addQuestion(block.data.questions)") Add question
      
      div(ng-show="!isEditing")
        div(ng-repeat = "q in block.data.questions track by $index")
          .question.col-md-10.col-md-offset-1(id="question{{$index}}")
            h4 {{$index + 1}}. {{q.question}}
            div(ng-repeat = "a in q.answers track by $index")
              .btn.btn-default.w100(ng-click="checkAnswer(a.correct, $parent.$index)")
                .radio
                  label {{alphabet[$index]}} ) {{a.answer}}
                    input(type="radio", name="q{{$parent.$index}}")
        .col-md-6.col-md-offset-3
          button.btn.btn-success.w100(ng-click="evaluate()") Evaluate
