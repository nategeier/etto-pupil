
.row(ng-class="block.data.youtube || block.data.vimeo ? 'show-video' : 'none'")
  div(ng-show="!block.data.youtube && !block.data.vimeo && !block.data.wistia")
    .col-md-4.etto-shadow
      .etto-video-insert
        img.img-responsive(src="/images/logos/youtube.jpg")
        hr
        p(editable-text="block.data.youtube", buttons="no", blur="submit", onaftersave="saveCourse()") {{ block.data.youtube || 'Enter Youtube ID'}}
        hr
        small Example:
        br
        img.img-responsive(src="/images/courses/misc/youtube_id.jpg")
    .col-md-4
      .etto-video-insert
        img.img-responsive(src="/images/logos/vimeo.jpg")
        hr
        p(editable-text="block.data.vimeo", buttons="no", blur="submit", onaftersave="saveCourse()") {{ block.data.vimeo || 'Enter Vimeo ID'}}
        hr
        small Example:
        br
        img.img-responsive(src="/images/courses/misc/vimeo_id.jpg")
    .col-md-4
      .etto-video-insert
        img.img-responsive(src="/images/logos/wistia.png")
        hr
        p(editable-text="block.data.wistia", buttons="no", blur="submit", onaftersave="saveCourse()") {{ block.data.wistia || 'Enter Wistia ID'}}
        hr
        small Example:
        br
        img.img-responsive(src="/images/courses/misc/wistia_id.png")
    hr

div(ng-if="block.data.youtube || block.data.vimeo || block.data.wistia")
  .row
    .col-xs-12.col-md-10.col-md-offset-1.col-lg-8.col-lg-offset-2
      .etto-video
        etto-youtube(ng-if="block.data.youtube", code="{{ block.data.youtube }}" )
        etto-vimeo(ng-if="block.data.vimeo", vimeo="{{ block.data.vimeo }}" )
        etto-wistia(ng-if="block.data.wistia", wistia="{{ block.data.wistia }}" )
