.row(ng-class="block.data.youtube || block.data.vimeo ? 'show-video' : 'none'")
  .col-md-10.col-md-offset-1.col-lg-6.col-lg-offset-3
    div(ng-show="!block.data.youtube && !block.data.vimeo")
      hr
      .col-md-6
        img.img-responsive(src="/images/logos/youtube.jpg")
        p(editable-text="block.data.youtube", buttons="no", blur="submit", onaftersave="saveCourse()") {{ block.data.youtube || 'Enter Youtube ID'}}
      .col-md-6
        img.img-responsive(src="/images/logos/vimeo.jpg")
        p(editable-text="block.data.vimeo", buttons="no", blur="submit", onaftersave="saveCourse()") {{ block.data.vimeo || 'Enter Vimeo ID'}}
      hr
    etto-youtube(ng-show="block.data.youtube", code="{{ block.data.youtube }}" )
    etto-vimeo(ng-show="block.data.vimeo", vimeo="{{ block.data.vimeo }}" )
