.row
  .col-sm-7.col-lg-7
    h1(editable-text="block.data.title", buttons="no", blur="submit", onaftersave="saveCourse()", spellcheck="true") {{block.data.title || 'title'}}
    h2(editable-text="block.data.subtitle", buttons="no", blur="submit", onaftersave="saveCourse()", spellcheck="true") {{block.data.subtitle || 'subtitle'}}
    div(href="#", editable-textarea="block.data.copy", e-rows="12", e-cols="40", buttons="no", blur="submit", onaftersave="saveCourse()", spellcheck="true") 
      pre {{ block.data.copy || 'copy'}}
  .col-sm-5
    img.img-responsive.img-uploadable(src="{{ block.data.url || '/images/courses/default/image-block.jpg' }}", etto-image, etto-asset-library-modal, ng-click="updateBlockImage(block, 'url', 400, 300)")
