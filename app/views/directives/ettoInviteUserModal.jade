.modal-header
  button.close( type="button" )
  h2.modal-title Create a Course
.modal-body
  form(ng-submit="inviteUser(newUser)")
    .form-group
      input.form-control( type="text", ng-model="newUser.name", placeholder="name", autocomplete="on", required )
    .form-group
      input.form-control( type="text", ng-model="newUser.email", placeholder="email", required )
    .form-group
      input.btn.btn-primary( type="submit", value="Create")