
nav.navbar.navbar-default( role="navigation", etto-session)
  .navbar-header
    etto-login-modal
    button.navbar-toggle( data-toggle="collapse", data-target="#etto-navbar" )
      .sr-only Toggle navigation
      .icon-bar
      .icon-bar
      .icon-bar
    a.navbar-brand( href="/etto" )
      span
        img(src="/images/site/logo.png")
      span.logo-name Coursetto

  #etto-navbar.collapse.navbar-collapse
    ul.nav.navbar-nav
      li
        a.navbar-btn( href="/etto" )
          i.fa.fa-home.fa-2x
          small home
      li.divider
      li(ng-show= "user.auth.canGetCourses")
        a.navbar-btn( href="/store/{{user._tier._id}}" )
          i.fa.fa-ticket.fa-2x
          small market
      li.divider
      li(ng-show= "user.auth.canInvite")
        a.navbar-btn( href="/report/{{user._tier._id}}" )
          i.fa.fa-bar-chart-o.fa-2x(style="margin-right:5px")
          small reports

    .navbar-right
      ul.nav.navbar-nav

        li.dropdown
          a(data-toggle="dropdown", href="#")
            i.fa.fa-cog.fa-2x.pull-left
            small {{user.name}}
          ul(class="dropdown-menu", role="menu", aria-labelledby="dLabel")
            li
              a( href="/settings/{{user._id}}" ) Settings
            li
              a( href="/api/v1/auth/logout", target="_self" ) Logout
            li
              a( href="/subscription/{{user._id}}", target="_self" ) Subscriptions
            li
              a( href="/payments/{{user._id}}", target="_self" ) Payments
        li(ng-show="user.auth.canPurchase")
          a.btn.btn-default.btn-xs.navbar-btn(etto-purchase, href="#", ng-click='purchase(null, null)')
            small {{credits}} Credits
