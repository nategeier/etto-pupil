
nav.navbar.navbar-default( role="navigation", etto-session, etto-update-company)
  .navbar-header
    etto-login-modal
    button.navbar-toggle( data-toggle="collapse", data-target="#etto-navbar" )
      .sr-only Toggle navigation
      .icon-bar
      .icon-bar
      .icon-bar
    a.navbar-brand( href="/etto" )
      span.logo
        img(ng-if="user.auth.canPurchase", src="{{company.logo}}", etto-asset-library-modal, ng-click='updateLogo()', height="65")
        img(ng-if="!user.auth.canPurchase", src="{{company.logo}}", height="65")
      span.logo-name {{ company.title || 'Coursetto'}}

  #etto-navbar.collapse.navbar-collapse
    ul.nav.navbar-nav
      li
        a.navbar-btn( href="/etto" )
          i.fa.fa-home.fa-2x
          small home
      li.divider
      li(ng-show= "user.auth.canGetCourses")
        a.navbar-btn( href="/store/{{user._tier._id}}" )
          i.fa.fa-ticket.fa-2x
          small market
      li.divider
      li(ng-show= "user.auth.canInvite")
        a.navbar-btn( href="/report/{{user._tier._id}}" )
          i.fa.fa-bar-chart-o.fa-2x(style="margin-right:5px")
          small reports
      li(ng-show= "user.auth.canCreateCourses")
        a.navbar-btn(href="#", etto-add-course, ng-click='addCourse()')
          i.fa.fa-flask.fa-2x(style="margin-right:5px")
          small Create Course
      

    .navbar-right
      ul.nav.navbar-nav
        li.dropdown
          a(data-toggle="dropdown", href="#")
            i.fa.fa-cog.fa-2x.pull-left
            small {{user.name}}
          ul(class="dropdown-menu", role="menu", aria-labelledby="dLabel")
            li
              a( href="/settings/{{user._id}}" ) Settings
            li
              a( href="#", ng-click="destroySession('/')" ) Logout
            li
              a( href="/subscription/{{user._id}}", target="_self", ng-show= "user.auth.canPurchase") Subscriptions
            li
              a( href="/payments/{{user._id}}", target="_self", ng-show= "user.auth.canPurchase") Payments
        li(ng-show="user.auth.canPurchase")
          a.btn.btn-default.btn-xs.navbar-btn(etto-purchase, href="#", ng-click='purchase(null, null)')
            small {{credits}} Credits
