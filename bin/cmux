#!/bin/sh
# Attach if session has been created
tmux has-session -t etto-pupil 2>/dev/null
if [ $? -eq 0 ]; then
  echo "Session already exists, attaching..."
  tmux attach-session -t etto-pupil
  exit 0;
fi

# Otherwise, make it happen!
tmux new-session -d -s etto-pupil -n servers

# Create Windows
tmux new-window -t etto-pupil:2 -n vim
tmux new-window -t etto-pupil:3 -n zsh

# Create Panes
tmux split-window -t etto-pupil:servers
tmux split-window -t etto-pupil:vim

# Run commands
tmux send-keys -t etto-pupil:servers.0 'c etto-pupil; grunt serve' C-m
tmux send-keys -t etto-pupil:servers.1 'c etto; sails lift' C-m
tmux send-keys -t etto-pupil:vim.0 'c etto-pupil; vim -S' C-m
tmux send-keys -t etto-pupil:vim.1 'c etto-pupil; karma start --auto-watch' C-m

# Connect to Session
tmux select-window -t etto-pupil:servers
tmux attach-session -t etto-pupil

